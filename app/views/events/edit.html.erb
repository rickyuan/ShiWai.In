<div class="container">
<%= render 'shared/notice' %>
	<div>
	  <h3>编辑此记录</h3>
	  <%= form_for(@event) do |f| %>
	  <div>
		<%= f.label :name, "名称" %><br \>
		<%= f.text_field :name %>
	  </div>
	  <div>
		<%= f.label :story, "描述" %><br \>
		<%= f.text_area :story %>
	  </div>
	  <div>
		<%= f.submit "更新" %>
	  </div>
	  <% end %>
	</div>
</div>