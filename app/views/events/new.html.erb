<div class="container">
<%= render 'shared/notice' %>
	<div>
	  <h3>创建一个新的旅行故事</h3>
	  <%= form_for(@event) do |f| %>
	  <%= render 'shared/error_message_for', :object => f.object %>
	  <div>
		<%= f.label :name, "标题" %><br \>
		<%= f.text_field :name %>
	  </div>
	  <div>
		<%= f.label :story, "序言" %><br \>
		<%= f.text_area :story %>
	  </div>
	  <div>
		<%= f.submit "创建" %>
	  </div>
	  <% end %>
	</div>
</div>